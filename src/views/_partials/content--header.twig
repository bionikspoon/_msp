{% from 'macros/img.twig' import img_attr, img_style %}

<h2 class="_msp-blog__title">
   {% if link_title %}
      <a href={{ post.link }} rel=bookmark>
         {{ post.title }}
      </a>
   {% else %}
      {{ post.title }}
   {% endif %}
</h2>
<div class="_msp-blog__meta">
   {# TODO <?php _msp_posted_on(); ?>#}
   <p class="_msp-blog__date">
      <i class="material-icons">access_time</i>{{ post.post_date | date }}
   </p>
   {% if post.categories != ['Uncategorized'] %}
      <p class="_msp-blog__categories">
         <i class="material-icons">folder</i>{{ post.categories | tax_links | join(',&nbsp;') }}
      </p>
   {% endif %}

</div>

{% if post.thumbnail %}
   <img {{ img_attr(post.thumbnail) }} class="_msp-blog__thumbnail">
{% endif %}
